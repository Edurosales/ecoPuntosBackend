# ======================================
# ECOPUNTOS BACKEND - PRODUCCIÓN
# ======================================

# APP CONFIG
APP_NAME=EcoPuntos
APP_ENV=production
APP_KEY=base64:CAMBIAR_ESTO_CON_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://ecopuntos-backend.up.railway.app

# DATABASE (Railway MySQL)
DB_CONNECTION=mysql
DB_HOST=CAMBIAR_CON_RAILWAY_HOST
DB_PORT=3306
DB_DATABASE=ecopuntos
DB_USERNAME=CAMBIAR_CON_RAILWAY_USER
DB_PASSWORD=CAMBIAR_CON_RAILWAY_PASSWORD

# SESSION & CACHE
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_DOMAIN=.railway.app
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=none

CACHE_DRIVER=file
QUEUE_CONNECTION=sync

# SANCTUM (Autenticación)
SANCTUM_STATEFUL_DOMAINS=ecopuntos-admin.vercel.app,ecopuntos.vercel.app,ecopuntos-recolector.vercel.app

# CORS (4 dominios frontend)
CORS_ALLOWED_ORIGINS=https://ecopuntos-admin.vercel.app,https://ecopuntos.vercel.app,https://ecopuntos-recolector.vercel.app

# MAIL (Opcional - Configurar si usas email)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=tu-email@gmail.com
MAIL_PASSWORD=tu-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@ecopuntos.com
MAIL_FROM_NAME="${APP_NAME}"

# LOG
LOG_CHANNEL=stack
LOG_LEVEL=error
